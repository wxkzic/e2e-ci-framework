		{
			"name": "Update Post",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const id = pm.collectionVariables.get('postId');",
							"pm.expect(id, \"postId is missing â€” run Create Post first\").to.be.ok;",
							"",
							"pm.variables.set(\"id\", id);",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status is 200\", () => {",
							"  pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Is JSON\", () => {",
							"  const ct = pm.response.headers.get(\"content-type\") || pm.response.headers.get(\"Content-Type\");",
							"  pm.expect(ct, \"content-type header\").to.be.ok;",
							"  pm.expect(ct).to.include(\"application/json\");",
							"});",
							"",
							"const ct = pm.response.headers.get(\"content-type\") || pm.response.headers.get(\"Content-Type\");",
							"let json = null;",
							"let isJson = false;",
							"if (ct && ct.includes(\"application/json\")) {",
							"  try {",
							"    json = pm.response.json();",
							"    isJson = true;",
							"  } catch (e) {",
							"    isJson = false;",
							"  }",
							"}",
							"",
							"pm.test(\"updated id matches (if JSON)\", () => {",
							"  if (!isJson) {",
							"    pm.expect.fail(\"Response is not valid JSON, so cannot check id match.\");",
							"    return;",
							"  }",
							"  const savedId = pm.collectionVariables.get('postId');",
							"  pm.expect(savedId, \"collection variable postId must be set\").to.be.ok;",
							"  pm.expect(json, \"Response is not JSON\").to.be.an(\"object\");",
							"  pm.expect(String(json.id)).to.eql(savedId);",
							"});",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
